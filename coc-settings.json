{
  "latex-workshop.intellisense.unimathsymbols.enabled": true,
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.intellisense.env.enabled": true,
  "coc.source.latex.enabled": true,
  "coc.source.latex.triggerCharacters": ["$", "\\", "{", "}"],
  "coc.source.latex.filetypes": ["tex"],
  "coc.source.latex.suggest.enable": true,
  "languageserver": {
    "texlab": {
      "command": "texlab",
      "filetypes": ["tex", "bib", "latex", "plaintext"],
      "rootPatterns": ["*.tex"],
      "settings": {
        "texlab": {
          "build": {
            "args": [
              "-pdf",
              "-interaction=nonstopmode",
              "-synctex=1",
              "%f"
            ],
            "executable": "latexmk",
            "forwardSearchAfter": true,
            "onSave": true
          },
          "forwardSearch": {
            "executable": "zathura",  
            "args": ["--synctex-forward", "%l:1:%f", "%p"]
          }
        }
      }
    }
  }
}

